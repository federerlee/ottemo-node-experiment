doctype html
html
  head
    title= 'Ottemo Login Screen'
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel="stylesheet", media="screen")
    script(src='//code.jquery.com/jquery-2.1.0.min.js')
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
  body
  .container
    h1 Ottemo Login Page
    p.lead Welcome to Freshbox
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-default(type='submit') Submit
      &nbsp;&nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
